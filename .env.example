# Example environment variables file
# Copy this file to .env and add your actual keys

# Database configuration
DATABASE_URL=sqlite:///tradingjournalapp.db

# MCP Configuration
MCP_REGISTRY_URL=http://localhost:8000/mcp/registry
MCP_AUTH_KEY=your_mcp_auth_key_here
MCP_CONFIG_PATH=./mcp_config.json

# MCP Server URLs (optional - will use defaults if not specified)
MCP_STATISTICS_URL=http://localhost:8001/mcp/statistics
MCP_MARKET_DATA_URL=http://localhost:8002/mcp/market-data
MCP_TRADE_ANALYSIS_URL=http://localhost:8003/mcp/trade-analysis
MCP_AI_URL=http://localhost:8004/mcp/ai
MCP_ALERTS_URL=http://localhost:8005/mcp/alerts
MCP_SENTIMENT_URL=http://localhost:8006/mcp/sentiment
MCP_TRADESAGE_URL=http://localhost:8007/mcp/tradesage

# MCP Feature Flags
MCP_AI_ENABLED=true
MCP_TRADESAGE_ENABLED=true

# API Keys for external services
ANTHROPIC_API_KEY=your_anthropic_api_key_here
TRADINGVIEW_API_KEY=your_tradingview_api_key_here
MARKET_DATA_API_KEY=your_market_data_api_key_here

# Security
SECRET_KEY=your_app_secret_key_here
JWT_SECRET=your_jwt_secret_key_here
